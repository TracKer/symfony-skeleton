{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
  <div class="form-group">
    <input class="form-control form-control-lg" type="text" id="username" name="username" required="required"
           autocomplete="username" placeholder="{{ 'resetting.request.username'|trans }}"/>
  </div>
  <div class="form-group">
    <button class="btn btn-lg btn-block btn-outline-primary" type="submit" id="submit" name="submit">
      {{ 'resetting.request.submit'|trans }}
    </button>
  </div>
  <div class="form-group text-center">
    <a href="{{ path('fos_user_security_login') }}">Back to login form</a>
  </div>
</form>
